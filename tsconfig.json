{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "generated/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "esModuleInterop": true,
        "module": "es2020",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "target": "ES2015",
        "resolveJsonModule": true,
        "types": [
            "node",
            "svelte",
            "jest"
        ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": true
    },
    "include": [
        "src",
        "resources",
        "tests"
    ]
}