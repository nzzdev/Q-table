{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Tabelle",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string"
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string"
    },
    "data": {
      "title": "Daten",
      "type": "array",
      "Q:type": "table",
      "Q:options": {
        "allowTranspose": false
      },
      "items": {
        "type": "array",
        "items": {
          "oneOf": [
            {
            	"type": "string"
          	},
            {
            	"type": "null"
          	}
          ]
        }
      },
      "minItems": 1
    },
    "sources": {
      "title": "Quellen",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Text",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        },
        "required": ["text"]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "options": {
      "title": "Optionen",
      "type": "object",
      "properties": {
        "hideTableHeader": {
          "title": "Spaltenüberschriften ausblenden",
          "type": "boolean",
          "default": false
        },
        "cardLayout": {
          "title": "Card-Layout",
          "type": "boolean",
          "default": false
        },
        "cardLayoutIfSmall": {
          "title": "Card-Layout für Mobile",
          "type": "boolean",
          "default": false,
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "withData": true,
                "endpoint": "option-availability/cardLayoutIfSmall"
              }
            ]
          }
        },
        "minibarOptions": {
          "title": "Minibars",
          "oneOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "withData": true,
                "endpoint": "option-availability/minibarOptions"
              }
            ],
            "dynamicEnum": {
              "type": "ToolEndpoint",
              "withData": true,
              "endpoint": "dynamic-enum/minibarOptions"
            }
          }
        },
        "invertColors": {
          "title": "Farben invertieren",
          "type": "boolean",
          "default": false,
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "withData": true,
                "endpoint": "option-availability/invertColors"
              }
            ]
          }
        },  
        "colorOverwrite": {
          "title": "Farben", 
          "type": "object",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "UserHasRole",
                "role": "expert-table"
              },
              {
                "type": "ToolEndpoint",
                "withData": true,
                "endpoint": "option-availability/colorOverwrite"
              }
            ]
          },
          "properties": {
            "colorPositive": {
              "title": "Positiv",
              "type": "string"
            },
            "colorNegative": {
              "title": "Negativ",
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": [
    "title", "data"
  ]
}
